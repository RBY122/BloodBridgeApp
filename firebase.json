{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "database": "(default)",
    "location": "africa-south1",
    "indexes": "firestore.indexes.json"
  },
  
  "emulators": {
    "singleProjectMode": true,
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5000
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    }
  }
}
