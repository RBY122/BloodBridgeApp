@page
@model BloodBridge.Pages.Dashboard.ChatForumModel
@using BloodBridge.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.AspNetCore.Identity.UserManager<Donor> UserManager

@{
    var donor = await UserManager.GetUserAsync(User);
    var fullName = donor?.FullName ?? "Guest";
    Layout = "_PageLayout";
    ViewData["Title"] = "Chat Forum";
    ViewData["UserFullName"] = fullName; // makes it accessible in the layout
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-5">Chat Forum</h1>
        <p class="lead">Welcome, @fullName! Join the conversation below.</p>
    </div>

    <!-- 💬 Chat Messages Section -->
    <div class="card mb-4 chat-container">
        <div class="card-header bg-primary text-white">
            Recent Messages
        </div>
        <div class="card-body" style="max-height: 300px; overflow-y: auto;">
            @if (Model.Posts?.Any() == true)
            {
               @foreach (var post in Model.Posts)
{
    var bubbleClass = post.BloodGroup switch
    {
        "O+" => "bubble-op",
        "A+" => "bubble-ap",
        "B+" => "bubble-bp",
        "AB+" => "bubble-abp",
        _ => "bubble-default"
    };

    <div class="chat-message mb-3 pb-2 @bubbleClass">
        <strong>@post.UserName (@post.BloodGroup)</strong>
        <small class="text-muted">@post.Timestamp.ToLocalTime():g</small>
        <p>@post.Message</p>
    </div>
}

            }
            else
            {
                <p class="text-muted">No messages yet. Be the first to post!</p>
            }
        </div>
    </div>

    <!-- 📝 Message Input Form -->
    <div class="card">
        <div class="card-header">
            Post a Message
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Message" class="chat-form">
                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" name="NewPost.Message" rows="3" required></textarea>
                    <span asp-validation-for="NewPost.Message" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-danger mt-2">Send</button>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

@section Scripts {
    <script src="https://unpkg.com/feather-icons"></script>
    <script>feather.replace();</script>
}
