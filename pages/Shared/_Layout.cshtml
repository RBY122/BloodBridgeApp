@inject Microsoft.AspNetCore.Identity.UserManager<Donor> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var userFullName = user?.FullName ?? "Guest";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "BloodBridge")</title>

    

    <!-- ðŸ§  Favicon -->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />

    <!-- ðŸŽ¨ Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    

    <!-- âš¡ External Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- ðŸ’¡ Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>

<header>
  <nav class="navbar navbar-expand">
    <div class="container">
        <a class="navbar-brand logo-animate" asp-controller="Home" asp-action="Index">
 <img src="~/images/logo.jpg" alt="BloodBridge Logo" />
</a>


        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item @(string.Equals(Context.Request.Path, "/", StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item @(Context.Request.Path.Value?.Contains("/Support") ?? false ? "active" : "")">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Support">Support Us</a>
                </li>
                <li class="nav-item @(Context.Request.Path.Value?.Contains("/AboutUs") ?? false ? "active" : "")">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item @(Context.Request.Path.Value?.Contains("/Privacy") ?? false ? "active" : "")">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </li>
            </ul>

            <div class="d-flex align-items-center">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <span class="navbar-text me-2">Welcome, @userFullName!</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Log Out</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="SignUp" class="btn btn-outline-danger me-2">Sign Up</a>
                    <a asp-controller="Account" asp-action="SignIn" class="btn btn-danger">Sign In</a>
                }
            </div>
        </div>
    </div>
</nav>
</header>

<div class="dashboard-wrapper">
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="dashboard-sidebar">
            @await Html.PartialAsync("_Navbar")
        </div>
    }

    <div class="dashboard-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>


<!-- âœ… Footer placed outside container-fluid to prevent overlap -->
<footer class="footer bg-dark text-white text-center py-3">
    <div class="container">
        <div class="row d-flex flex-wrap justify-content-center text-md-start">
            <div class="col-md-4 mb-3">
                <h5>About Us</h5>
                <p>BloodBridge connects blood donors with recipients efficiently.</p>
            </div>
            <div class="col-md-4 mb-3">
                <h5>Useful Links</h5>
                <nav>
                    <ul class="list-unstyled">
                        <li><a class="text-white opacity-75" asp-controller="Home" asp-action="AboutUs">About</a></li>
                        <li><a class="text-white opacity-75" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        <li><a class="text-white opacity-75" asp-controller="Home" asp-action="Support">Support Us</a></li>
                    </ul>
                </nav>
            </div>
            <!-- Contact Info -->
            <div class="col-md-4 mb-3">
                <h5>Get in Touch</h5>
                <p><i data-feather="map-pin"></i> Kumasi, Ghana</p>
                <p><i data-feather="phone"></i> <a class="text-white opacity-75" href="tel:+2330596833199">+233 059 683 3199</a></p>
                <p><i data-feather="mail"></i> <a class="text-white opacity-75" href="mailto:richardboakye1710@gmail.com">richardboakye1710@gmail.com</a></p>
                <!-- Optional Socials -->
                <div class="mt-2">
                    <a href="https://facebook.com/YourProfile" class="text-white me-3" target="_blank"><i data-feather="facebook"></i></a>
                    <a href="https://wa.me/233596833199" class="text-white me-3" target="_blank"><i data-feather="message-circle"></i></a>
                    <a href="https://x.com/YourProfile" class="text-white me-3" target="_blank"><i data-feather="twitter"></i></a>
                    <a href="https://instagram.com/YourProfile" class="text-white" target="_blank"><i data-feather="instagram"></i></a>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <p>&copy; @DateTime.Now.Year BloodBridge. All Rights Reserved.</p>
        </div>
    </div>
</footer>



<script>feather.replace()</script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>