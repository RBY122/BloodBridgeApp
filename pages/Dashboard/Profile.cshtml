@model BloodBridge.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

@{
    var userName = User.Identity?.Name ?? Model.FullName ?? "Guest"; // Retrieves username dynamically
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
      <!-- 🔍 Metadata -->
    <meta name="description" content="BloodBridge connects blood donors and recipients efficiently across Ghana." />
    <meta name="author" content="Richard Boakye Yiadom" />
    <meta name="theme-color" content="#b30000" />

    <!-- 🧠 Favicon -->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />

    <!-- 🎨 Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Chartforum.css" asp-append-version="true" />

    <!-- ⚡ External Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- 💡 Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <!-- 🚀 Profile Main Content -->
            <main class="col-md-9 col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2 text-danger">Your Profile</h1>
                </div>

                <!-- ✅ Success & Error Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success fade-in" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger fade-in" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <!-- 🩸 Profile Overview -->
                <div class="profile-container text-center">
                    <img id="imagePreview"
                         src="@(Model.ProfilePictureUrl ?? Url.Content("~/images/default-profile.png"))"
                         alt="Profile Picture"
                         class="profile-image rounded-circle">
                    <h2>@Model.FullName</h2>
                    <p class="sub-text">@Model.Location</p>
                    <a asp-controller="Dashboard" asp-action="EditProfile" class="btn btn-outline-danger mt-2">Edit Profile</a>
                </div>

                <!-- 🏆 Achievements & Donor Impact -->
                <div class="card mt-4 border-danger shadow">
                    <div class="card-header bg-danger text-white">
                        Your Blood Donation Impact
                    </div>
                    <div class="card-body">
                        <p><strong>Total Donations:</strong> @Model.TotalDonations</p>
                        <p><strong>Lives Saved:</strong> <span class="text-success">@(Model.TotalDonations * 3)</span> (Estimate based on typical use)</p>
                        <p>💪 Keep donating to make a greater impact!</p>
                    </div>
                </div>

                <!-- ⚙️ User Settings -->
                <div class="card mt-4 border-primary shadow">
                    <div class="card-header bg-primary text-white">
                        User Preferences
                    </div>
                    <div class="card-body">
                        <p><strong>Notification Preferences:</strong> Email & SMS updates</p>
                        <p><strong>Dark Mode:</strong> @(Model.IsDarkModeEnabled ? "Enabled" : "Disabled")</p>
                        <a asp-controller="Dashboard" asp-action="UpdatePreferences" class="btn btn-outline-primary mt-2">Update Settings</a>
                    </div>
                </div>

                <!-- 🌍 Community Engagement -->
                <div class="card mt-4 border-warning shadow">
                    <div class="card-header bg-warning text-dark">
                        BloodBridge Community
                    </div>
                    <div class="card-body">
                        <p>💬 Connect with fellow donors & receive updates on urgent cases.</p>
                <a asp-controller="Dashboard"asp-action="ChatForum" class="btn btn-outline-warning mt-2">Join Donor Forum</a>   </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>