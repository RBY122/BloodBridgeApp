@{
    ViewData["Title"] = "Urgent Donation Cases";
}

<!DOCTYPE html>
<html lang="en">
<head>
        <!-- ðŸ” Metadata -->
    <meta name="description" content="BloodBridge connects blood donors and recipients efficiently across Ghana." />
    <meta name="author" content="Richard Boakye Yiadom" />
    <meta name="theme-color" content="#b30000" />

    <!-- ðŸ§  Favicon -->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />

    <!-- ðŸŽ¨ Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Chartforum.css" asp-append-version="true" />

    <!-- âš¡ External Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- ðŸ’¡ Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">BloodBridge</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="bg-danger text-white text-center py-4">
        <div class="container">
            <h1>Urgent Blood Donation Cases</h1>
            <p>Your donation today can save lives.</p>
        </div>
    </header>

    <!-- Emergency Alerts -->
    <div class="container my-5">
        <h3>Cases Needing Immediate Attention</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h5 class="card-title">John Doe - Type O- Blood Needed</h5>
                        <p class="card-text">Hospital: Accra General</p>
                        <p class="card-text">Urgency: Within 24 hours</p>
                        <a href="#" class="btn btn-danger">Donate Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h5 class="card-title">Emergency Case - Platelet Donation Needed</h5>
                        <p class="card-text">Blood Bank: Kumasi LifeCare</p>
                        <p class="card-text">Urgency: ASAP</p>
                        <a href="#" class="btn btn-danger">Donate Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <section class="text-center bg-light py-4">
        <h2>Be a Hero Today</h2>
        <p>Spread the word and help urgent cases get the donations they need.</p>
        <a href="#" class="btn btn-danger">Learn More</a>
    </section>

</body>
</html>