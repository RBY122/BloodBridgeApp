@{
    ViewData["Title"] = "Health & Donation Tips";
    var userName = User.Identity?.Name ?? "Guest"; // ‚úÖ Ensure username is retrieved
}

<!DOCTYPE html>
<html lang="en">
<head>
        <!-- üîç Metadata -->
    <meta name="description" content="BloodBridge connects blood donors and recipients efficiently across Ghana." />
    <meta name="author" content="Richard Boakye Yiadom" />
    <meta name="theme-color" content="#b30000" />

    <!-- üß† Favicon -->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />

    <!-- üé® Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Chartforum.css" asp-append-version="true" />

    <!-- ‚ö° External Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- üí° Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
           

            <!-- üöÄ Main Content Area -->
            <main class="col-md-9 col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2 text-danger">Health & Donation Tips</h1>
                </div>

                <!-- ‚úÖ Success & Error Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success fade-in" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger fade-in" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <!-- ü©∏ Essential Tips for Blood Donors -->
                <section class="tips-container">
                    <div class="card-group">
                        <div class="card text-center shadow">
                            <div class="card-body">
                                <h2>üíß Stay Hydrated</h2>
                                <p>Drink at least 8 glasses of water daily for better blood circulation.</p>
                            </div>
                        </div>

                        <div class="card text-center shadow">
                            <div class="card-body">
                                <h2>ü•¶ Eat Iron-Rich Foods</h2>
                                <p>Consume spinach, lentils, and red meat to replenish iron levels before donating.</p>
                            </div>
                        </div>

                        <div class="card text-center shadow">
                            <div class="card-body">
                                <h2>üèÉ Avoid Heavy Exercise Before Donating</h2>
                                <p>Refrain from intense workouts for at least 24 hours before donating to prevent dizziness.</p>
                            </div>
                        </div>

                        <div class="card text-center shadow">
                            <div class="card-body">
                                <h2>üò¥ Rest Well Before & After Donating</h2>
                                <p>Sleep at least 7-9 hours before donation & rest afterward for better recovery.</p>
                            </div>
                        </div>

                        <div class="card text-center shadow">
                            <div class="card-body">
                                <h2>üßò Manage Stress Levels</h2>
                                <p>Stay calm and relaxed before donating; stress may impact blood pressure levels.</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- üîç Common Myths vs Facts -->
                <div class="card mt-4 border-warning shadow">
                    <div class="card-header bg-warning text-dark">
                        Myths vs. Facts About Blood Donation
                    </div>
                    <div class="card-body">
                        <p><strong>‚ùå Myth:</strong> Donating blood makes you weak.</p>
                        <p><strong>‚úÖ Fact:</strong> Your body replenishes blood quickly, and donating does not cause long-term weakness.</p>

                        <p><strong>‚ùå Myth:</strong> You cannot donate if you have tattoos.</p>
                        <p><strong>‚úÖ Fact:</strong> You can donate blood if your tattoo is more than 6 months old.</p>

                        <p><strong>‚ùå Myth:</strong> Blood donation is painful.</p>
                        <p><strong>‚úÖ Fact:</strong> It‚Äôs just a small needle prick‚Äîmost donors describe it as manageable.</p>
                    </div>
                </div>

                <!-- üö® Urgent Cases & Awareness -->
                <div class="card mt-4 border-danger shadow">
                    <div class="card-header bg-danger text-white">
                        Urgent Blood Donation Needs üö®
                    </div>
                    <div class="card-body">
                        <p>üö® <strong>O-negative & B-positive donors needed urgently!</strong></p>
                        <p>üè• Hospitals in Kumasi & Accra are low on supply.</p>
                        <p>‚ö° <a asp-controller="Donations" asp-action="UrgentCases">See urgent cases & help</a></p>
                    </div>
                </div>

                <!-- ‚è≥ Upcoming Donation Reminder -->
                <div class="card mt-4 border-primary shadow">
                    <div class="card-header bg-primary text-white">
                        Upcoming Donation Reminder üìÖ
                    </div>
                    <div class="card-body">
                        <p>ü©∏ Next donation date: <strong>@Model?.NextDonationDate?.ToString("MMM dd, yyyy") ?? "Not Scheduled"</strong></p>
                        <p>‚ö° <a asp-controller="Donations" asp-action="Schedule">Schedule your next donation</a></p>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>