@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head>
       <!-- 🔍 Metadata -->
    <meta name="description" content="BloodBridge connects blood donors and recipients efficiently across Ghana." />
    <meta name="author" content="Richard Boakye Yiadom" />
    <meta name="theme-color" content="#b30000" />

    <!-- 🧠 Favicon -->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />

    <!-- 🎨 Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Chartforum.css" asp-append-version="true" />

    <!-- ⚡ External Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- 💡 Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

    <!-- ✅ Hero Section -->
    <header class="hero text-center py-5 text-white" style="background: var(--gradient-bg);">
        <h1 class="display-4 fw-bold">Privacy Policy</h1>
        <p class="lead">Protecting your data, securing your trust</p>
    </header>

    <main class="container my-5">

        <!-- ✅ Collection of Information -->
        <section class="content-section">
            <h2 class="text-danger fw-bold">What Information We Collect</h2>
            <p class="highlight">
                BloodBridge collects personal details such as names, contact information, addresses, and blood types 
                to ensure effective and reliable donor-recipient matching.
            </p>
        </section>

        <!-- ✅ Use of Information -->
        <section class="content-section">
            <h2 class="text-danger fw-bold">How We Use Your Information</h2>
            <ul class="list-group">
                <li class="list-group-item">✔️ Facilitating urgent donor-recipient connections efficiently.</li>
                <li class="list-group-item">✔️ Enhancing platform functionality using anonymized analytics.</li>
                <li class="list-group-item">✔️ Providing updates, reminders, and system reliability alerts.</li>
            </ul>
        </section>

        <!-- ✅ Data Security -->
        <section class="content-section">
            <h2 class="text-danger fw-bold">How We Protect Your Data</h2>
            <p>
                BloodBridge adopts state-of-the-art security measures including encryption, secure servers, 
                and regular audits. Our team prioritizes the integrity and confidentiality of all user information.
            </p>
        </section>

        <!-- ✅ Your Privacy Rights -->
        <section class="content-section">
            <h2 class="text-danger fw-bold">Your Privacy Rights</h2>
            <ul class="list-group">
                <li class="list-group-item">✔️ Access the personal information we hold about you.</li>
                <li class="list-group-item">✔️ Request updates or corrections to inaccurate details.</li>
                <li class="list-group-item">✔️ Ask us to delete your personal information at any time.</li>
            </ul>
            <p>💌 Need assistance? Contact us at:
                <a href="mailto:richardboaky1710@gmail.com">support@bloodbridge.com</a>
            </p>
        </section>

        <!-- ✅ User Consent -->
        <section class="content-section">
            <h2 class="text-danger fw-bold">User Consent & Policy Updates</h2>
            <p>
                By using BloodBridge, you agree to our privacy policy, and we ensure full transparency in data usage.
                Any updates will be communicated via email and posted on our website.
            </p>
        </section>

        <!-- ✅ Transparency & Commitment -->
        <section class="content-section">
            <h2 class="text-danger fw-bold">Transparency & Our Commitment</h2>
            <p>
                BloodBridge is built on trust. We do not sell or disclose personal information to third parties 
                without explicit consent, except when required by law.  
                Our mission is to uphold the highest standards of privacy protection.
            </p>
        </section>

    </main>

</body>
</html>